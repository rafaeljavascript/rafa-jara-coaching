{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": true,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 80,
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingComma": "es5"
		}
	}
}
